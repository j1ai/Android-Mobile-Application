<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:orientation="horizontal"></LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="117dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/welcomeMessage"
            android:layout_width="240dp"
            android:layout_height="147dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Welcome asdf." />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dailyQuote"
            android:layout_width="400dp"
            android:layout_height="147dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="The way to get started is to quit talking and begin doing. - Walt Disney" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/titleTime"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Time" />

            <TextView
                android:id="@+id/TitleTask"
                android:layout_width="114dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Task" />

            <TextView
                android:id="@+id/titleModify"
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="Modify Task" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/taskTimeOne"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="11:00-12:00" />

            <TextView
                android:id="@+id/taskOne"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:text="CSC373 Problem Set 3" />

            <Button
                android:id="@+id/buttonOne"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="+" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/taskTimeTwo"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="12:00-2:00" />

            <TextView
                android:id="@+id/taskTwo"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:text="CSC301 Deliverable 2" />

            <Button
                android:id="@+id/buttonTwo"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="+" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/taskTimeThree"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="2:00-4:00" />

            <TextView
                android:id="@+id/taskThree"
                android:layout_width="200dp"
                android:layout_height="75dp"
                android:gravity="center"
                android:text="Yoga Session at BA 2190" />

            <Button
                android:id="@+id/buttonThree"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:text="+" />

        </TableRow>
    </TableLayout>

</LinearLayout>